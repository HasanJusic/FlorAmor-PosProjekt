@page
@model FlorAmor.Webapp.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h3 class="display-4">You have successfully logged in!</h3>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
    
<div class="container mt-5">
    <h2>Geschäfte</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Standort</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var laden in Model.Laeden)
            {
                <tr>
                    <td>@laden.Name</td>
                    <td>@laden.Standort</td>
                
                    <td>
                        <a href="Blumen/DetailsPage?id=@laden.Id" class="btn btn-primary">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
