@page
@model FlorAmor.Webapp.Pages.DetailsPageModel  

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>Blumen Details</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

</head>
<body>
<div class="container mt-5">
    <h2>Blumen Datenbank</h2>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Art</th>
            <th>Preis</th>
            @* <th>Stückzahl</th> *@
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var blume in Model.Blumen){
            <tr>
                <td>@blume.Id</td>
                <td>@blume.Art</td>
                <td>@blume.Preis</td>
                @* <td>@blume.Stückzahl</td> *@
                <td>
                    <a class="ms-2" asp-page="BlumenDetails" asp-route-blumenId="@Uri.EscapeDataString(blume.Id.ToString())"><i class="fa-solid fa-circle-info"></i></a>
                    <a class="ms-2" asp-page="Edit" asp-route-blumenId="@Uri.EscapeDataString(blume.Id.ToString())"><i class="fa-regular fa-pen-to-square"></i></a>
                    <a class="ms-2" asp-page="BlumenDelete" asp-route-blumenId="@Uri.EscapeDataString(blume.Id.ToString())"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>