@page
@model FlorAmor.Webapp.Pages.DetailsPageModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Blumen Details</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>
        .yellow-bg {
            background-color: yellow;
            color: #000;
        }

        .red-bg {
            background-color: red;
            color: #000;
        }

        .white-bg {
            background-color: white;
            color: #000;
        }

        .pink-bg {
            background-color: pink;
            color: #000;
        }

        .default-bg {
            background-color: lightgrey;
            color: #000;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <!-- Form for creating a new flower -->
        <h3>Neue Blume</h3>
        <form method="post">
            <div class="form-group">
                <label for="Art">Art</label>
                <input type="text" class="form-control" id="Art" name="Blume.Art" value="@Model.Blume.Art" />
                <span class="text-danger" asp-validation-for="Blume.Art"></span>
            </div>
            <div class="form-group">
                <label for="Preis">Preis</label>
                <input type="text" class="form-control" id="Preis" name="Blume.Preis" value="@Model.Blume.Preis" />
                <span class="text-danger" asp-validation-for="Blume.Preis"></span>
            </div>
            <div class="form-group">
                <label for="Stückzahl">Stückzahl</label>
                <input type="number" class="form-control" id="Stückzahl" name="Blume.Stückzahl" value="@Model.Blume.Stückzahl" />
                <span class="text-danger" asp-validation-for="Blume.Stückzahl"></span>
            </div>
            <div class="form-group">
                <label for="Farbe">Farbe</label>
                <input type="text" class="form-control" id="Farbe" name="Blume.Farbe" value="@Model.Blume.Farbe" />
                <span class="text-danger" asp-validation-for="Blume.Farbe"></span>
            </div>
            <div class="mt-3 text-danger" asp-validation-summary="All"></div>
            <button type="submit" class="btn btn-primary">Speichern</button>
        </form>

        <hr />

        <!-- Table displaying existing flowers -->
        <h1>Blumen Datenbank</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Art</th>
                    <th>Preis</th>
                    <th>Stückzahl</th>
                    <th>Farbe</th>
                    <th>Verfügbarkeit</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blume in Model.Blumen)
                {
                    var rowClass = blume.Farbe.ToLower() switch
                    {
                        "gelb" => "yellow-bg",
                        "rot" => "red-bg",
                        "weiß" => "white-bg",
                        "pink" => "pink-bg",
                        _ => "default-bg"
                    };

                    <tr class="@rowClass">
                        <td>@blume.Art</td>
                        <td>@blume.Preis</td>
                        <td>@blume.Stückzahl</td>
                        <td>@blume.Farbe</td>
                        <td><input type="checkbox" disabled @(blume.IstVerfügbar ? "checked" : "") /></td>
                        <td>
                            <a class="ms-2" asp-page="BlumenDetails" asp-route-blumenId="@Uri.EscapeDataString(blume.Id.ToString())"><i class="fa-solid fa-circle-info"></i></a>
                            <a class="ms-2" asp-page="BlumenEdit" asp-route-blumenId="@Uri.EscapeDataString(blume.Id.ToString())"><i class="fa-regular fa-pen-to-square"></i></a>
                            <a class="ms-2" asp-page="BlumenDelete" asp-route-blumenId="@Uri.EscapeDataString(blume.Id.ToString())"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
