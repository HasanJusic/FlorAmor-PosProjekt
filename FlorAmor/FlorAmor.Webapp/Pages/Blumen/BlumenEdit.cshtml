@page "{blumenId:guid}"
@model FlorAmor.Webapp.Pages.BlumenEditModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Blume Bearbeiten</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h2>Blume Bearbeiten</h2>
        <form method="post">
            <input type="hidden" asp-for="Blume.Guid" />

            <div class="form-group">
                <label asp-for="Blume.Art">Art</label>
                <input type="text" class="form-control" asp-for="Blume.Art" />
                <span class="text-danger" asp-validation-for="Blume.Art"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blume.Preis">Preis</label>
                <input type="text" class="form-control" asp-for="Blume.Preis" />
                <span class="text-danger" asp-validation-for="Blume.Preis"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blume.Stückzahl">Stückzahl</label>
                <input type="number" class="form-control" asp-for="Blume.Stückzahl" />
                <span class="text-danger" asp-validation-for="Blume.Stückzahl"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blume.Farbe">Farbe</label>
                <input type="text" class="form-control" asp-for="Blume.Farbe" />
                <span class="text-danger" asp-validation-for="Blume.Farbe"></span>
            </div>
            <button type="submit" class="btn btn-primary">Speichern</button>
        </form>
    </div>
</body>
</html>
